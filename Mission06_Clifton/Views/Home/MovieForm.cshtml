@{
    ViewData["Title"] = "Movie Form";
}

<form>
    <!--Category, Title, Year, Rating, Edited, Lent To:, Notes-->
    <!--Rating (dropdown), Edited (yes/no), Lent to, Notes (limit 25)-->
    <label for="title">Title: </label>
    <input type="text" name="title" id="title" required/><br />

    <label for="category">Category: </label>
    <input type="text" name="category" id="category" required /><br />

    <label for="year">Year: </label>
    <input type="text" name="year" id="year" required /><br />

    <label for="rating">Rating: </label>
    <select name="rating" id="rating" required>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG">PG-13</option>
        <option value="R">R</option>
    </select> <br />

    <label for="edited">Edited: </label>
    <select name="edited" id="edited">
        <option value="yes">Yes</option>
        <option value="no">No</option>
    </select> <br />

    <!--LENT TO-->

    <label for="notes">Notes: </label>
    <input type="text" maxlength="25" /><br />

    <input type="submit" value="Submit" />
</form>