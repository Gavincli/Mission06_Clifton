@{
    ViewData["Title"] = "Movie Form";
}

@model Movie

<h1>Movie Form</h1>

<form asp-action="MovieForm" method="post">

    <!-- Title -->
    <label asp-for="Title"></label>
    <input asp-for="Title" />
    <span asp-validation-for="Title"></span>
    <br />

    <!-- Category -->
    <label asp-for="Category"></label>
    <input asp-for="Category" />
    <span asp-validation-for="Category"></span>
    <br />

    <!-- Year -->
    <label asp-for="Year"></label>
    <input asp-for="Year" />
    <span asp-validation-for="Year"></span>
    <br />

    <!-- Director -->
    <label asp-for="Director"></label>
    <input asp-for="Director" />
    <span asp-validation-for="Director"></span>
    <br />

    <!-- Rating (Dropdown) -->
    <label asp-for="Rating"></label>
    <select asp-for="Rating">
        <option value="">Select a rating</option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <span asp-validation-for="Rating"></span>
    <br />

    <!-- Edited (Yes/No) -->
    <label asp-for="Edited"></label>
    <select asp-for="Edited">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <span asp-validation-for="Edited"></span>
    <br />

    <!-- Lent To -->
    <label asp-for="Lent"></label>
    <input asp-for="Lent" />
    <span asp-validation-for="Lent"></span>
    <br />

    <!-- Notes (25 character limit) -->
    <label asp-for="Notes"></label>
    <input asp-for="Notes" maxlength="25" />
    <span asp-validation-for="Notes"></span>
    <br />

    <button type="submit">Submit</button>
</form>
